/**index.wxss**/
.big-list{
    background-color: #fff;
    margin: 0 10px 10px;
}

.title {
    display: flex;
    flex-direction: column;
    height: 60px;
    background-color: #fff;
    margin-left:10px;
    justify-content: center;
}
.item{
    font-size: 14px;
}
.item-list{
    margin-left: 25px;
    line-height: 50px;
    height: 50px;
    border-bottom: 1px solid #eee;
    position:relative;
}
.item-list:last-child {
   border-bottom: none
}

.list__desc-link_arrow{
    content:"";
    width:8px;
    height:14px;
    display:block;
    position:absolute;
    right:10px;
    top:18px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.section{
    height: 45px;
    margin: 10px;
    background-color: #fff;
}
.search-input{
    height: 100%;
    margin: 0 10px;
    width: 250px;
    display:inline-block;
}
.search-btn{
    text-align: center;
    width: 60px;
    line-height: 45px;
    display:inline-block;
    float: right;
    height: 100%;
    padding: 0;
    margin: 0;
    border-radius:0 !important;
    background-color: #ccc;
}