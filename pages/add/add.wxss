.list{
    font-size: 28rpx;
    background-color: #eee;
}
.section{
    height: 40px;
    background-color: #fff;
    border-bottom: 1px #eee solid;
    line-height: 40px;
}
.lable_txt{
    display: inline-block;
    margin-left: 10px;
}
.right_element{
    float: right;
    margin-right: 10px;
    width: 250px;
    text-align:right;
}
.gap{
    margin-top: 20px;
}
.title_input{
    margin-top: 9px;
}
.event-type_parent{
    font-size: 14px;
    background-color:#fff;
}
.event-type_child{
    text-align: center;
    line-height: 30px;
}

.event-type_icon {
    width:24px;
    height:24px;
    margin-top: 3px;
}
.event-type_txt{
    display: inline-block;
}

.right-arrow{
    width:10px;
    height:10px;
    margin-top:15px;
}

.lbs-list__footer-box {
    overflow:hidden
}
.lbs-list__footer {
    padding:10px 0;
    position:fixed;
    bottom:0;
    z-index:299;
    width:100%;
    background-color:#fff
}
@media only screen and (-webkit-min-device-pixel-ratio:2),only screen and (min-device-pixel-ratio:2) {
    .lbs-list__footer {
    border:none;
    background-image:-webkit-linear-gradient(270deg,#e6e6e6,#e6e6e6 50%,transparent 0),-webkit-linear-gradient(180deg,transparent,transparent 50%,transparent 0),-webkit-linear-gradient(90deg,transparent,transparent 50%,transparent 0),-webkit-linear-gradient(0,transparent,transparent 50%,transparent 0);
    background-size:100% 1px,1px 100%,100% 1px,1px 100%;
    background-repeat:no-repeat;
    background-position:top,100% 0,bottom,0 0
}
}.lbs-list__btn {
    border:1px solid #1aae18;
    border-radius:4px;
    background-clip:padding-box;
    height:43px;
    line-height:43px;
    text-align:center;
    padding:0 10px;
    color:#fff;
    margin:0 13px;
    font-size:18px;
    background-color:#1aae18
}
.lbs-list__btn_light {
    background-color:#fff;
    color:#1aae18
}
.lbs-list__btn_disabled {
    background-color:#e7e7e7;
    color:#fff;
    border:1px solid #e7e7e7
}

.calendar{
    position: absolute;
    bottom: 0;
    width: 100%;
    z-index: 999;
    background-color: #fff; 
}
.tab{
    display:inline-block;
    width:50%;
    text-align:center;
    font-size:16px;
    color: #ccc;
}
.tab-bar{
    background-color: #eee;
    height: 40px;
    line-height: 40px;
}
.tab-bar .active{
    color: #000;
}
.selected-item{
    font-size: 28px;
}

.popup-bg {
    position: fixed;
    z-index: -1;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,.6);
}
.calendar-body{
    background-color: #fff;
}
