<view class="list">
    <view class="section gap">
        <label class="lable_txt">标题</label>
        <input class="right_element title_input" type="text" placeholder="请输入标题"/>
    </view>
    <view class="section">
        <label class="lable_txt">日期</label>
        <picker class="right_element" mode="date" value="{{date}}" bindchange="bindDateChange">
            <view class="picker">
              {{date}}
            </view>
        </picker>
    </view>
    <view bindtap="bindAddTagTap" class="section">
        <label class="lable_txt">分类</label>
        <image src="../img/right-arrow.png" class="right_element right-arrow" />
        <view class="right_element">{{tag_data[selectTagIndex].tag_name}}</view>
    </view>
    <view class="section gap">
        <label class="lable_txt">设为封面</label>
         <switch class="right_element" bindchange="switchChange"/>
    </view>
    <view class="section">
        <label class="lable_txt">重复</label>
        <picker class="right_element" bindchange="bindreplayTypePickerChange"  value="{{replayTypeIndex}}" range-key="name" range="{{replayTypeArr}}">
            <view class="picker">
              {{replayTypeArr[replayTypeIndex].name}}
            </view>
        </picker>
    </view>
</view>
<view class="lbs-list__footer-box">
    <view class="lbs-list__footer">
        <view bindtap="bindSaveInfo" class="lbs-list__btn">保存</view>
    </view>
</view>



<view class="calendar">
    <view class="tab-bar">
        <view bindtap="changeTab" data-tap="1" class="tab {{selectDateType === 1 ? 'active' : ''}}">公历</view>
        <view bindtap="changeTab" data-tap="2" class="tab {{selectDateType === 2 ? 'active' : ''}}">农历</view>
    </view>
  <picker-view class="event-type_parent" indicator-style="height: 30px;" style="{{selectDateType === 1 ? '' : 'display: none;'}} width: 100%; height: 200px;" value="{{value}}" bindchange="changeDate">
    <picker-view-column>
        <view wx:for="{{years}}" class="event-type_child" >
            <text class="event-type_txt">{{item.name}}</text>
        </view>
    </picker-view-column>
    <picker-view-column>
        <view wx:for="{{month}}" class="event-type_child" >
            <text class="event-type_txt">{{item.name}}</text>
        </view>
    </picker-view-column>
    <picker-view-column>
        <view wx:for="{{days}}" class="event-type_child" >
            <text class="event-type_txt">{{item.name}}</text>
        </view>
    </picker-view-column>
  </picker-view>
  <picker-view class="event-type_parent" indicator-style="height: 30px;" style="{{selectDateType === 2 ? '' : 'display: none;'}}width: 100%; height: 200px;" value="{{value}}" bindchange="changeDate">
    <picker-view-column>
        <view wx:for="{{years}}" class="event-type_child" >
            <text class="event-type_txt">{{item.name}}</text>
        </view>
    </picker-view-column>
    <picker-view-column>
        <view wx:for="{{month}}" class="event-type_child" >
            <text class="event-type_txt">{{item.name}}</text>
        </view>
    </picker-view-column>
    <picker-view-column>
        <view wx:for="{{days}}" class="event-type_child" >
            <text class="event-type_txt">{{item.name}}</text>
        </view>
    </picker-view-column>
  </picker-view>
</view>


